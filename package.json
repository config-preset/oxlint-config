{
    "name": "@lonewolfyx/oxlint-config",
    "type": "module",
    "version": "0.0.0-alpha.1",
    "packageManager": "pnpm@10.15.1",
    "description": "Lonewolfyx's OXLint config preset",
    "author": "lonewolfyx",
    "license": "MIT",
    "homepage": "https://github.com/config-preset/oxlint-config#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/config-preset/oxlint-config.git"
    },
    "bugs": "https://github.com/config-preset/oxlint-config/issues",
    "keywords": [],
    "exports": {
        ".": "./dist/index.mjs",
        "./package.json": "./package.json"
    },
    "types": "./dist/index.d.mts",
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "tsdown --watch",
        "build": "tsdown",
        "release": "npm publish",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "prepublishOnly": "pnpm build",
        "prepare": "simple-git-hooks"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^7.4.3",
        "@lonewolfyx/tsconfig": "^0.0.6",
        "@types/node": "^25.3.0",
        "eslint": "^10.0.1",
        "lint-staged": "^16.2.7",
        "picocolors": "^1.1.1",
        "simple-git-hooks": "^2.13.1",
        "tsdown": "^0.20.3",
        "tsdown-preset": "^1.0.3",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org",
        "access": "public"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged",
        "commit-msg": "node scripts/verify-commit.js"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
